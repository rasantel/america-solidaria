<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="span8">
    <% if @user.projects.any? %>
      <h3>My Projects (<%= @user.projects.count %>)</h3>
      <ol class="microposts">
        <%= render @projects %>
      </ol>
      <%= will_paginate @projects %>
    
    <% else %>
      <h3>You are not currently a part of any projects</h3>
    <% end %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
  <h1>America Solidaria Application Portal</h1>

  <h2>
  This is the home page for the
  <a href="http://www.americasolidaria.org">America Solidaria</a>
  application portal.
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("as-main-logo.png", alt: "America Solidaria"), 'http://www.americasolidaria.org' %>

<% end %>
